# ============================================
# NotionNext 环境变量配置示例
# ============================================

# Notion配置
NOTION_PAGE_ID=your_notion_page_id
API_BASE_URL=https://www.notion.so/api/v3

# 网站基础配置
NEXT_PUBLIC_THEME=heo
NEXT_PUBLIC_LANG=zh-CN
NEXT_PUBLIC_AUTHOR=Your Name
NEXT_PUBLIC_LINK=https://yourdomain.com

# 性能优化配置
NEXT_PUBLIC_REVALIDATE_SECOND=60
NEXT_PUBLIC_PRELOAD_CRITICAL_RESOURCES=true
NEXT_PUBLIC_LAZY_LOAD_IMAGES=true
NEXT_PUBLIC_ENABLE_CODE_SPLITTING=true

# 代码配置
NEXT_PUBLIC_CODE_MAC_BAR=true
NEXT_PUBLIC_CODE_LINE_NUMBERS=false
NEXT_PUBLIC_CODE_COLLAPSE=true
NEXT_PUBLIC_CODE_COLLAPSE_EXPAND_DEFAULT=true

# 图片优化
NEXT_PUBLIC_WEBP_SUPPORT=true
NEXT_PUBLIC_AVIF_SUPPORT=true

# 构建优化
NODE_ENV=production
ANALYZE=false
BUNDLE_ANALYZER=false
EXPORT=false

# 缓存配置
NEXT_PUBLIC_BROWSER_CACHE_TTL=86400
NEXT_PUBLIC_CDN_CACHE_TTL=604800

# 性能监控
NEXT_PUBLIC_ENABLE_WEB_VITALS=true
